 pipeline{

     agent any

     environment {
             // Define the email recipients
             RECIPIENTS = 'onyangosamsonobur@gmail.com' ,
                           'natnaelalemtsge@gmail.com' ,
                            'adiljacobfrancis@gmail.com',
                             'samuelkhamis06@gmail.com'
         }

     stages {

         stage('Checkout') {        // this stage fetches the source code form github
             steps {
                 git branch: 'main', url: 'https://github.com/SamsonNeyo/Music-Catalogue.git'
             }
         }

       stage('Build') {         // compiles the source code
             steps {
                 sh 'mvn clean compile'
             }
         }



         stage('Test') {    // runs unit test
             steps {
                 sh 'mvn test'
             }

             //post {
             //  success {
             //    junit '**/target/surefire-reports/*.xml' // Publish JUnit test results
             //}
             //failure {
             //    echo 'Tests failed! Check the test reports for details.'
             //     }
            // }

         }

              stage('Send Email Notification')
              {
                      steps {
                          script {
                              // Send email notification based on test result
                              def subject = currentBuild.result == 'SUCCESS' ? 'Test Passed' : 'Test Failed'
                              def body = "The test has ${currentBuild.result.toLowerCase()}."

                              // Use Email Extension Plugin to send the email
                              emailtext (
                                  to: RECIPIENTS,
                                  subject: subject,
                                  body: body,
                                  mimeType: 'text/html'
                              )
                          }
                      }

              }


     }
 }